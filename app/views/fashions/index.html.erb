<h1>RestartFashion</h1>
<h3>一覧ページ</h3>

<h3>投稿を検索</h3>
 <%= form_tag({controller:"fashions",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>

<%= link_to "新規投稿ページへ", new_fashion_path %>
<%= page_entries_info @fashions %>
<%= paginate @fashions %>

<div class="fashions-container">
<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>
  <% @fashions.each do |t| %>
    <div>
    <h2>総合評価：
    <span class="star-rating">
    <span class="star-rating-front" style="width: <%= getPercent(t.overall) %>%;">★★★★★</span>
    <span class="star-rating-back">★★★★★</span>
    </span> 
    </h2>
</div>
    <div class="fashion">
      <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.name %>
      <%= t.address %>
      <%= t.about %>
      <%= t.image %>
      <%= link_to "詳細へ", fashion_path(t.id) %>
      <%= link_to "編集する", edit_fashion_path(t.id) %>
      <%= button_to "削除する", fashion_path(t.id), method: :delete %>
    </div>
  <% end %>
</div>

